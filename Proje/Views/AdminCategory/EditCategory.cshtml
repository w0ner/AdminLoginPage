@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori ID")
        @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Acıklaması")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        <br />
        @Html.Label("Oluşturma Tarihi")
        @Html.TextAreaFor(x => x.CreatedAt, new { @class = "form-control" })
        <br />
        @Html.Label("Oluşturan YazarID")
        @Html.TextAreaFor(x => x.CreatedBy, new { @class = "form-control" })
        <br />

        <button class="btn btn-success">Güncelle</button>

    </div>
}

